{
    "manifest_version": 2,
    "name": "GitHub Download Helper",
    "short_name": "GDH",
    "version": "0.1.2",
    "description": "Download files and folders from GitHub via context menu.",
    "homepage_url": "https://github.com/gasserus/github-download-helper-chrome",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": "images/icon-48.png",
        "default_title": "GitHub Download Helper"
    },
    "background": {
        "scripts": [
            "js/vendor.js",
            "js/background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "contextMenus",
        "downloads",
        "storage",
        "notifications",
        "<all_urls>"
    ]
}